extends layout

block b1
  form.cs-post-create-wrapper(action="/blog/add" method="POST")
    .cs-post-create-preview
      .cs-auth-title.mdc-typography--button Xem trước
      .cs-preview.markdown-body#preview

    .cs-post-create-main
      .cs-auth-title.mdc-typography--button Nội dung bài đăng
      .mdc-text-field.mdc-text-field--textarea
        textarea#content.mdc-text-field__input(required="true", name="content")
        .mdc-notched-outline
          .mdc-notched-outline__leading
          .mdc-notched-outline__notch
            label.mdc-floating-label Content 
          .mdc-notched-outline__trailing

    .cs-post-create-conf
      .cs-post-conf-wrapper
        .cs-auth-title.mdc-typography--button Các thông tin
        .mdc-text-field.mdc-text-field--outlined
          input.mdc-text-field__input(type="text", required="true", name="title", maxlength="200")
          .mdc-notched-outline
            .mdc-notched-outline__leading
            .mdc-notched-outline__notch
              label.mdc-floating-label Title 
            .mdc-notched-outline__trailing
        .mdc-text-field-helper-line
          .mdc-text-field-character-counter

      button.mdc-button.mdc-button--unelevated(type="submit") Đăng