extends layout

block b1
  .container
    .row
      .col-6
        form(action="/blog/add" method="POST")
          .form-group
            label(for='exampleInputEmail1') Title
            input#exampleInputEmail1.form-control(type='text', placeholder='Tiêu đề', required="true", autofocus="true", name="title")
          .form-group
            label(for='content') Content (markdown support)
            textarea#content.form-control(placeholder='Nhập nội dung...', required="true", name="content", rows=15)
          button.btn.btn-primary(type='submit') Đăng

      .col-6
        #preview.markdown-body