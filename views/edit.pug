extends layout

block b1
  h1 Edit your profile 
  form(action="/edit", method="post")
    input.mb-2.form-control(type="text", name="displayName", placeholder="Display Name", value=currentUser.displayName || "")
    textarea.form-control.mb-2(name="bio", placeholder="Tell us about yourself!")= currentUser.bio || ""
    input.btn.btn-primary(type="submit", value="Update")