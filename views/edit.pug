extends layout

block b1
  .text-center-cus Edit your profile 
  form(action="/edit", method="post")
    .form-group
      label(for="displayNameInput") Display Name
      input#displayNameInput.form-control(type="text", name="displayName", placeholder="Display Name", value=currentUser.displayName || "")
    .form-group
      label(for="UsernameInput") Username
      input#UsernameInput.form-control(type="text", name="username", placeholder="Username", value=currentUser.username || "")
    .form-group
      label(for="textareaBio") Bio
      textarea#textareaBio.form-control.mb-2(name="bio", placeholder="Tell us about yourself!")= currentUser.bio || ""
    a(href="/change-password") Change password
    .d-flex.justify-content-center
      button.btn.btn-primary(type='submit') Update